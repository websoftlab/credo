{
	"compilerOptions": {
		"allowJs": true,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": false,
		"jsx": "preserve",
		"lib": [
			"es2019"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmit": false,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "esnext",
		"baseUrl": "./",
		"rootDir": "./src",
		"outDir": "./lib",
		"paths": {},
		"types": [
			"node"
		]
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"**/.*/",
		"**/build",
		"**/node_modules"
	]
}
